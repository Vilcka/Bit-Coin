
    <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">S'inscrire</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    {{ form_start(form, {'attr': {'class': 'md-form mb-5'}}) }}
                    {{ form_row(form.firstName, {'attr': {'class': 'form-control validate'}} ) }}
                    <div class="md-form mb-5">
                        {{ form_row(form.lastName, {'attr': {'class': 'form-control validate '}}) }}
                    </div>
                    <div class="md-form mb-4">
                        {{ form_row(form.username, {'attr': {'class': 'form-control validate'}}) }}
                    </div>
                    <div class="md-form mb-4">
                        {{ form_row(form.email, {'attr': {'class': 'form-control validate'}}) }}
                    </div>
                    <div class="md-form mb-4">
                        {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control validate'}}) }}
                    </div>
                    <div class="md-form mb-4">
                        {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control validate'}}) }}
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn sunny-morning-gradient">Valider</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
